

<% include header %>
<div class="container" id="edit">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <form id='form' role="form" method="post" action="/edit/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">
                <label class="editBt">标题:</label><br>
                <input  type="text" name="title" value="<%= post.title %>" disabled="disabled"><br>
                <label class="editZw">正文:</label><br>
                <textarea class="CD" cols="50%" rows="14" name="post"><%= post.post %></textarea><br>
                <input class='btn btn-warning change' type="submit" value="提交更改">
            </form>
        </div>
    </div>
</div>
<% include footer %>
